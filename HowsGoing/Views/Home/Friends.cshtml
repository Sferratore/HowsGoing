@{
}

<h3 style="align-content:center">Friends</h3>

<form asp-action="FriendSearch" asp-controller="Home" method="post">
    <label for="username">Username</label>
    <input type="text" id="username" name="username"/>
    <br />
    <input type="submit" value="Find a friend!">
</form>

<br /><br />






<h4>Your friends:</h4>
    <div style="padding: 25px">
        <table>
            <tr>
                <th>Username</th>
            </tr> 
        @{
            int i = 1;
            List<string> friends = new List<string>();
            while (Context.Session.GetString("friend" + i) != null)
            {
                friends.Add(Context.Session.GetString("friend" + i));
                i++;
            }
        }
            @foreach (string friendstr in friends)
            {
                <tr>
                    <td>@friendstr</td>
                </tr>
            }
        </table>
    </div>




<br /><br />


@if (ViewBag.users != null)
{
    <h4>Add other friends!</h4>
    <div style="padding: 40px">
        <table>
            <tr>
                <th>Username</th>
                <th>Add?</th>
            </tr>
            @foreach (User user in ViewBag.users)
            {
                <tr>
                    <td>@user.username</td>
                    <td><input type="button" value="Add!"></td>
                </tr>
            }
        </table>
    </div>
}
